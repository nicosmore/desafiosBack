<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Vista de Productos</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
        integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
</head>

<body>
    <div class="container mt-3">
        
        <h1>EJS</h1>

        <%- include('./styles/vista')-%>

            <div class="jumbotron border ">
                <h2>Vista de Productos</h2>
                <br>
                <% if(hayProductos){%>
                    <div class="table-responsive rounded">
                        <table class="table rounded table-dark">
                            <tr class="">
                                <th>Nombre</th>
                                <th>Precio</th>
                                <th>Foto</th>
                            </tr>
                            <%productos.forEach(function(producto){%>
                                <tr>
                                    <td>
                                        <%=producto.name%>
                                    </td>
                                    <td>
                                        <%=producto.price%>
                                    </td>
                                    <td><img width="50" src=<%=producto.image%> alt="not found"></td>
                                </tr>
                                <%});%>
                        </table>
                    </div>
                    <% } else{ %>
                        <h3 class="alert alert-warning">No se encontraron productos</h3>
                        <% } %>
                            <br>
                            <a href="/" type="button" class="btn btn-primary">Cargar un nuevo producto</a>
            </div>
    </div>
