extends layouts/index.pug

block vista
    style.
        .table td, .table th {
            vertical-align: middle;
        }    
        .jumbotron {
            min-height: 50vh;
        }
    h1='Pug'
    div(class="jumbotron ")
        h2='Vista de Productos'
        br
        if hayProductos
            div(class="table-responsive rounded")
                table(class="table table-dark rounded")
                    tr
                        th='Nombre'
                        th='Precio'
                        th='Foto'
                        each producto in productos
                            tr
                                td=producto.name
                                td=producto.price
                                td
                                    img(width="50" src=producto.image alt="not found")
        else
            h3(class="alert alert-warning")='No se encontraron productos'
        br
        a(href="/" type="button" class="btn btn-primary")='Cargar un nuevo producto'
